cmake_minimum_required(VERSION 2.8)
project( ColorPlate )
set(OpenCV_DIR /afs/cs.cmu.edu/academic/class/15418-s14/public/opencv2014/src/share/OpenCV)
INCLUDE_DIRECTORIES("/afs/cs.cmu.edu/academic/class/15418-s14/public/opencv2014/src/include")
find_package(OpenCV REQUIRED)
add_executable( ColorPlate main.cpp ) 
find_library(CV_LIB NAMES opencv_calib3d PATHS /afs/cs.cmu.edu/academic/class/15418-s13/public/lib/)
find_library(CV_LIBA NAMES opencv_core PATHS /afs/cs.cmu.edu/academic/class/15418-s13/public/lib/)
target_link_libraries( ColorPlate ${OpenCV_LIBS}) 